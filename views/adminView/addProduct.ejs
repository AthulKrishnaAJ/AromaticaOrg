            const selectImages = [];

            document.getElementById("imageInput").addEventListener("change", handleFileSelecion);

            function handleFileSelecion(event) {

                const addImagesContainer = document.getElementById('addedImagesContainer')

                addImagesContainer.innerHTML = ""

                // Get the selected files
                const files = event.target.files

                for (let i = 0; i < files.length; i++) {

                    const file = files[i];

                    selectImages.push(file);

                    const thumbnail = createThumbnail(file)

                    addImagesContainer.appendChild(thumbnail)
                }
            }

            function createThumbnail(file) {

                // Create thumbnail element
                const thumbnail = document.createElement("div");
                thumbnail.classList.add("thumbnail");

                // Create image element
                const img = document.createElement("img");
                img.src = URL.createObjectURL(file);
                img.alt = "thumbnail";


                img.style.width = "50px";
                img.style.height = "auto";


                // Create remove icon
                const removeIcon = document.createElement("span");
                removeIcon.classList.add("remove-icon")
                removeIcon.innerHTML = "&times;";

                removeIcon.addEventListener("click", () => removeThumbnail(file, thumbnail))

                thumbnail.appendChild(img);
                thumbnail.appendChild(removeIcon)

                return thumbnail;
            }

            function removeThumbnail(file, thumbnail) {

                const index = selectImages.indexOf(file)
                if (index !== -1) {
                    selectImages.splice(index, 1);
                }

                thumbnail.remove();

            }
























            // vaidate form

            document.addEventListener('DOMContentLoaded', function () {
                const form = document.querySelector('form');

                form.addEventListener('submit', function (event) {
                    event.preventDefault();

                    // Validate each input field
                    const productName = document.getElementById('product_name').value.trim();
                    const description = document.querySelector('textarea[name="description"]').value.trim();
                    const regularPrice = document.querySelector('input[name="regularPrice"]').value.trim();
                    const salePrice = document.querySelector('input[name="salePrice"]').value.trim();
                    const quantity = document.querySelector('input[name="quantity"]').value.trim();
                    const size = document.querySelector('input[name="size"]').value.trim();

                    const nameRegex = /^[a-zA-Z]+(?: [a-zA-Z]+)*$/;

                    // Validate product name
                    if (productName === '') {
                        showError('productName', 'Product name is required');
                    } else if (!nameRegex.test(productName)) {
                        showError('productName', 'Should contain only alphabets');
                    }
                    else {
                        hideError('productName');
                    }


                    // Validate description
                    if (description === '') {
                        showError('description', 'Description is required');
                    }
                    else if (description.length <= 9) {
                        showError('description', 'Atleast enter 10 letters');
                    }
                    else {
                        hideError('description');
                    }



                    // Validate regular price
                    if (regularPrice === '') {
                        showError('regularPrice', 'Regular price is required');
                    }
                    else if (regularPrice <= 0) {
                        showError('regularPrice', 'Enter a positive number');
                    }
                    else if (!isValidNumber(regularPrice)) {
                        showError('regularPrice', 'Please enter a valid number');
                    } else {
                        hideError('regularPrice');
                    }



                    // Validate sale price
                    if (salePrice === '') {
                        showError('salePrice', 'Sale price is required');
                    }
                    else if (salePrice <= 0) {
                        showError('salePrice', 'Enter the positive number');
                    }
                    else if (parseFloat(salePrice) >= parseFloat(regularPrice)) {
                        showError('salePrice', 'Field is less than regular price');
                    }
                    else if (!isValidNumber(salePrice)) {
                        showError('salePrice', 'Please enter a valid number');
                    } else {
                        hideError('salePrice');
                    }



                    // Validate quantity
                    if (quantity === '') {
                        showError('quantity', 'Quantity is required');
                    }
                    else if (quantity <= 0) {
                        showError('quantity', 'Enter a positive number');
                    }
                    else if (!isValidNumber(quantity)) {
                        showError('quantity', 'Please enter a valid number');
                    } else {
                        hideError('quantity');
                    }



                    // Validate size
                    if (size === '') {
                        showError('bottleSize', 'Size is required');
                    }
                    else if (size <= 0) {
                        showError('bottleSize', 'Enter a positive number');
                    }
                    else if (!isValidNumber(size)) {
                        showError('bottleSize', 'Please enter a valid number');
                    } else {
                        hideError('bottleSize');
                    }




                    // If all validations pass, submit the form
                    if (formIsValid()) {
                        form.submit();
                    }
                });

                // Helper function to show error messages
                function showError(field, message) {
                    const errorElement = document.getElementById(field + '-error');
                    errorElement.textContent = message;
                }

                // Helper function to hide error messages
                function hideError(field) {
                    const errorElement = document.getElementById(field + '-error');
                    errorElement.textContent = '';
                }

                // Helper function to check if a value is a valid number
                function isValidNumber(value) {
                    return !isNaN(parseFloat(value)) && isFinite(value);
                }

                // Helper function to check if the form is valid
                function formIsValid() {
                    const errorElements = document.querySelectorAll('.error-message');
                    for (const errorElement of errorElements) {
                        if (errorElement.textContent !== '') {
                            return false;
                        }
                    }
                    return true;
                }
            });



