    <script>

        const nameErrorMessage = document.getElementById("nameErrorMessage")
        const descriptionErrorMessage = document.getElementById("descriptionErrorMessage")


        function validation() {

            const nameError = document.getElementById("product_name")
            const descriptionError = document.getElementById("descriptionError")

            const nameRegex = /^[a-zA-Z]+(?: [a-zA-Z]+)*$/;

            const descriptionRegex = /^[\s\S]{10,}$/;
            const notNumberRegex = /^[^\d]*$/;


            // Name validation
            if (nameError.value.trim() === "" || nameError.value === null) {
                nameErrorMessage.innerHTML = "Name is required"
                return false;
            }
            else if (nameError.value.length <= 2) {
                nameErrorMessage.innerHTML = "Name is too short,Enter atleast 3 characters"
                return false
            }
            else if (!nameRegex.test(nameError.value)) {
                nameErrorMessage.innerHTML = "Should contains only alphabets"
                return false;
            }
            else {
                nameErrorMessage.innerHTML = ""

            }


            // Description validation
            if (descriptionError.value.trim() === "" || descriptionError.value === null) {
                descriptionErrorMessage.innerHTML = "Description is required"
                return false;
            }
            else if (!notNumberRegex.test(descriptionError.value)) {
                descriptionErrorMessage.innerHTML = "Numbers not allowed"
                return false
            }
            else if (!descriptionRegex.test(descriptionError.value)) {
                descriptionErrorMessage.innerHTML = "Enter atleast 10 letters"
                return false
            }
            else {
                descriptionErrorMessage.innerHTML = ""

            }



            return true;

        }
        // document.getElementById("product_name").addEventListener("input",validation);
