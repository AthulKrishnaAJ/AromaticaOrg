        <script>
            $(document).ready(function () {
                $('#couponExpiry').datepicker({
                    format: 'dd/mm/yyyy',
                    autoclose: true,
                    todayHighlight: true
                })
            });




            function deleteCoupon(couponId) {
                Swal.fire({
                    title: 'Are you sure!',
                    text: 'You want to delete this coupon.',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'yes',
                    cancelButtonText: 'No'
                }).then((result) => {
                    if (result.isConfirmed) {

                        $.ajax({
                            url: `/admin/deleteCoupon/${couponId}`,
                            method: 'post',
                            success: (response) => {
                                if (response.success) {
                                    Swal.fire({
                                        title: 'Success!',
                                        text: response.message,
                                        icon: 'success',
                                    }).then(() => {
                                        location.reload();
                                    })
                                }
                                else {
                                    Swal.fire({
                                        title: 'Error!',
                                        text: response.message,
                                        icon: 'error',
                                    })
                                }
                            },
                            error: (error) => {
                                console.log("Error in ajaxxx :", error);
                                Swal.fire({
                                    title: 'Error!',
                                    text: 'Somthing went wrong',
                                    icon: 'error',
                                })
                            }
                        })
                    }
                })
            }





            // update coupon status
            function updateCouponStatus(couponId, status) {
                Swal.fire({
                    title: 'Are you sure!',
                    text: `Are you want to ${status ? 'deactive' : 'active'} this coupon?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Yes',
                    cancelButtonText: 'No'
                }).then((result) => {
                    if (result.isConfirmed) {

                        $.ajax({
                            url: `/admin/changeCouponStatus/${couponId}`,
                            method: 'put',
                            data: { status: !status },
                            success: (response) => {
                                if (response.success) {

                                    const message = status ? 'Coupon deactivated' : 'Coupon activated'

                                    if (message === 'Coupon activated') {
                                        Toastify({
                                            text: message,
                                            duration: 3000,
                                            close: true,
                                            gravity: "top",
                                            position: "right",
                                            backgroundColor: "#28a745"
                                        }).showToast();

                                        setTimeout(() => {
                                            window.location.reload();
                                        }, 3000);
                                    }
                                    else {
                                        Toastify({
                                            text: message,
                                            duration: 3000,
                                            close: true,
                                            gravity: "top",
                                            position: "right",
                                            backgroundColor: "#dc3545"
                                        }).showToast();

                                        setTimeout(() => {
                                            window.location.reload();
                                        }, 3000);
                                    }
                                }
                                else {
                                    Toastify({
                                        text: response.message,
                                        duration: 3000,
                                        gravity: "top",
                                        close: true,
                                        position: "right",
                                        backgroundColor: "#dc3545",
                                    }).showToast();
                                }
                            },
                            error: (error) => {
                                console.log("error in ajaxxx :", error);
                                Toastify({
                                    text: "Somthing wrong, please try again",
                                    close: true,
                                    duration: 3000,
                                    gravity: "top",
                                    position: "right",
                                    backgroundColor: "#dc3545"
                                }).showToast();
                            }
                        })
                    }
                })
            }
        </script>

        <script>

            $(document).ready(function () {
                $('#addCouponForm').submit(function (event) {
                    event.preventDefault();


                    let couponName = $('#couponName').val().trim();
                    let minimumPrice = $('#minimumPrice').val().trim()
                    let discount = $('#couponAmount').val().trim();
                    let expiryDate = $('#couponExpiry').val().trim();


                    let isValid = true

                    let nameRegex = /^[a-zA-Z]+(?: [a-zA-Z]+)*$/;
                    let numberRegex = /^\d+$/;
                    let dateRegex = /^\d{2}\/\d{2}\/\d{4}$/;

                    let currentDate = new Date();

                    let expiryDateComponents = expiryDate.split('/');
                    let expiryDateObj = new Date(expiryDateComponents[2], expiryDateComponents[1] - 1, expiryDateComponents[0]);

                    console.log(expiryDateComponents)
                    console.log(currentDate);
                    console.log(expiryDateObj);


                    // coupon name validation
                    if (couponName === '' || couponName === null) {
                        $('#couponNameError').text('Field is required');
                        isValid = false
                    }
                    else if (couponName.length <= 4) {
                        $('#couponNameError').text('Enter minimum 5 characters');
                    }
                    else if (!nameRegex.test(couponName)) {
                        $('#couponNameError').text('Please enter valid name');
                        isValid = false
                    }
                    else {
                        $('#couponNameError').text('')
                    }



                    // minimum price validation
                    if (minimumPrice === '' || minimumPrice === null) {
                        $('#minimumPriceError').text('Field is required');
                        isValid = false
                    }
                    else if (!numberRegex.test(minimumPrice)) {
                        $('#minimumPriceError').text('Should contain only digits');
                        isValid = false
                    }
                    else if (minimumPrice <= 0) {
                        $('#minimumPriceError').text('Should contain positive digits');
                        isValid = false
                    }
                    else {
                        $('#minimumPriceError').text('')
                    }



                    // discount validation
                    if (discount === '' || discount === null) {
                        $('#discountError').text('Field is required');
                        isValid = false
                    }
                    else if (!numberRegex.test(discount)) {
                        $('#discountError').text('Should contain only digits');
                        isValid = false
                    }
                    else if (discount <= 0) {
                        $('#discountError').text('Should contain positive digits');
                        isValid = false
                    }
                    else if (parseFloat(discount) >= parseFloat(minimumPrice)) {
                        $('#discountError').text('Discount must be less than minimum price ');
                        isValid = false
                    }
                    else {
                        $('#discountError').text('')
                    }



                    // expiry date validation
                    if (expiryDate === '' || expiryDate === null) {
                        $('#expiryDateError').text('Field is required');
                        isValid = false
                    }
                    else if (!dateRegex.test(expiryDate)) {
                        $('#expiryDateError').text('Please valid expiry date');
                        isValid = false
                    }
                    else if (expiryDateObj <= currentDate) {
                        $('#expiryDateError').text('Expiry date must be on the future');
                        isValid = false
                    }
                    else {
                        $('#expiryDateError').text('')
                    }


                    if (isValid) {
                        var formData = $(this).serialize();
                        $.ajax({
                            url: '/admin/addCoupon',
                            method: 'POST',
                            data: formData,
                            success: (response) => {
                                $('#addCoupon').modal('hide');
                                if (response.success) {
                                    Toastify({
                                        text: response.message,
                                        duration: 3000,
                                        close: true,
                                        gravity: "top",
                                        position: "right",
                                        backgroundColor: "#28a745"
                                    }).showToast()

                                    setTimeout(() => {
                                        window.location.reload();
                                    }, 3000);

                                } else {
                                    Toastify({
                                        text: response.message,
                                        duration: 3000,
                                        gravity: "top",
                                        close: true,
                                        position: "right",
                                        backgroundColor: "#dc3545",
                                    }).showToast();

                                }
                            },
                            error: (xhr, status, error) => {
                                console.error(xhr.responseText);
                                Toastify({
                                    text: "Somthing wrong, please try again",
                                    close: true,
                                    duration: 3000,
                                    gravity: "top",
                                    position: "right",
                                    backgroundColor: "#dc3545"
                                }).showToast();
                            }
                        });
                    }
                });
            });

        </script>


