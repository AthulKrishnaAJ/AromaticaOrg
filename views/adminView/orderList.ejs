                                            <!-- <td>0901</td> -->
                                            <td><b>
                                                    <%=order.user.name%>
                                                </b></td>
                                            <td>
                                                <%=order.user.email%>
                                            </td>
                                            <td>$<%=order.totalCost%>.00</td>
                                            <td>
                                                <%if(order.status==="pending" ){%>
                                                    <span class="badge rounded-pill alert-warning">
                                                        <%=order.status%>
                                                    </span>
                                                    <%} else if(order.status==="processing" ){%>
                                                        <span class="badge rounded-pill alert-secondary">
                                                            <%=order.status%>
                                                        </span>
                                                        <%} else if(order.status==="shipped" ){%>
                                                            <span class="badge rounded-pill alert-info">
                                                                <%=order.status%>
                                                            </span>
                                                            <%} else if(order.status==="delivered" ){%>
                                                                <span class="badge rounded-pill alert-success">
                                                                    <%=order.status%>
                                                                </span>
                                                                <%} else if(order.status==="cancelled" ){%>
                                                                    <span class="badge rounded-pill alert-danger">
                                                                        <%=order.status%>
                                                                    </span>
                                                                    <%} else if(order.status==="returned" ){%>
                                                                        <span class="badge rounded-pill alert-primary">
                                                                            <%=order.status%>
                                                                        </span>
                                                                        <%}else if(order.status==="return pending" ){%>
                                                                            <span class="badge rounded-pill alert-dark">
                                                                                <%=order.status%>
                                                                            </span>
                                                                            <%}else if(order.status==="payment failed"
                                                                                ){%>
                                                                                <span
                                                                                    class="badge rounded-pill alert-danger">
                                                                                    <%=order.status%>
                                                                                </span>
                                                                                <%}%>
