        <div id="sales-report" class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="salesTable">
                   <h5 class="text-center">Sales Report</h5><hr>

                   <p> Total sales amount : <span style="margin-left: 10px;">Rs.<%= totalAmount %></span><strong style="margin-left: 10px;">-</strong></p>
                    <p> Total discount : <span style="margin-left: 38px;">Rs.<%= overAllDiscount %></span></p><hr class="mt-1">
                    <p class="mb-4"> Net discount : <span style="margin-left: 46px;">Rs.<%= netDiscount%></span></p>

                 
                    <thead>
                        <% if(salesOrders && salesOrders.length > 0){%>
                        <tr>
                            <th>No</th>
                            <th scope="col">Customer</th>
                            <th scope="col">Order Date</th>
                            <th scope="col">Payment Method</th>
                            <th scope="col">Order Status</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Total Amount</th>
                            <th scope="col">Add discount</th>
                            <th scope="col">Sales total</th>
                        </tr>
                    </thead>
                    <tbody id="defaultReport">
                      <% salesOrders.forEach((order, index) => {%>

                            <tr>

                                <td>
                                    <%= index + 1%>
                                </td>
                                
                                <td style="padding-left: 18px;">
                                    <%= order.user.name%>
                                </td>
                                <td>
                                   <%= order.createdAt.toLocaleDateString()%>
                                </td>
                                <td style="padding-left: 10px;">
                                    <%= order.paymentMethod%>
                                </td>
                                <td style="padding-left: 1rem;"><span class="badge rounded-pill alert-success ">
                                     <%= order.status%>
                                    </span></td>
                                <td style="padding-left: 20px;">
                                        Rs.<%= order.couponDetails.discountAmount%>
                                </td>
                                <td style="padding-left: 25px;">
                                    Rs.<%= order.totalCost + order.couponDetails.discountAmount%>
                                </td>

                                <td style="padding-left: 25px;">
                                    Rs.<%= (order.totalCost + order.couponDetails.discountAmount) - order.couponDetails.discountAmount%>
                                </td>


                            </tr>
                            <%})%>
                           <tr>
                            <td colspan="8"> </td>
                                <td style="padding-left: 15px;" >
                           Rs.<%= netDiscount%> 

                            </td>
                            </tr>
                            
                            <%}else{%>
                                <h5 class="text-muted text-center">Sales report not available</h5>
                        
                            <%}%>
                            
                        </tbody>

                </table>
                <!-- <input type="hidden" id="salesReportStore" value="ejsout sales "> -->
            </div> <!-- table-responsive //end -->
