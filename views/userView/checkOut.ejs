        const altPhone = document.querySelector('input[name="altPhone"]').value.trim();

        nameRegex = /^[a-zA-Z_]+$/;

        if (addressType === '') {
            showError('addressTypeError', 'Field is required');
        } else {
            clearError('addressTypeError');
        }

        if (name === '') {
            showError('nameError', 'Field is required');
        }else if(!nameRegex.test(name)){
            showError('nameError','Please enter valid name');
        } else if (name.length < 5) {
            showError('nameError', 'At least 5 characters required');
        } else {
            clearError('nameError');
        }

        if (addressLine === '') {
            showError('addressLineError', 'Field is required');
        } else if (addressLine.length < 10) {
            showError('addressLineError', 'At least 10 characters required');
        } else {
            clearError('addressLineError');
        }

        if (city === '') {
            showError('cityError', 'Field is required');
        } else {
            clearError('cityError');
        }

        if (state === '') {
            showError('stateError', 'Field is required');
        } else {
            clearError('stateError');
        }

        if (pincode === '') {
            showError('pinError', 'Field is required');
        } else if (!validPin(pincode)) {
            showError('pinError', 'Please enter a valid pincode');
        } else {
            clearError('pinError');
        }

        if (phone === '') {
            showError('phoneError', 'Field is required');
        } else if (!validPhone(phone)) {
            showError('phoneError', 'Please enter a valid phone number');
        }
        else if(phone.length < 10 || phone.length > 10){
            showError('phoneError','Should contain 10 digits');
        } else {
            clearError('phoneError');
        }

        if (altPhone === '') {
            showError('altPhoneError', 'Field is required');
        } else if (!validPhone(altPhone)) {
            showError('altPhoneError', 'Please enter a valid phone number');
        } else if (altPhone.length < 10 || altPhone.length > 10) {
            showError('altPhoneError', 'Should contain 10 digits');
        } else if (altPhone === phone) {
            showError('altPhoneError', 'Alternate phone number should be different from phone number');
        } else {
            clearError('altPhoneError');
        }

        if (isFormValid()) {
            form.submit();
        }
    });

    function clearError(field) {
        const errorElement = document.getElementById(field);
        errorElement.textContent = '';
    }

    function showError(id, message) {
        const errorElement = document.getElementById(id);
        errorElement.textContent = message;
    }

    function validPin(pin) {
        const valid = /^[1-9][0-9]{5}$/;
        return valid.test(pin);
    }

    function validPhone(phone) {
        const valid = /^[0-9]{10}$/;
        return valid.test(phone);
    }

    function isFormValid() {
        const errorElements = document.querySelectorAll('.error-message');
        let isValid = true;
        errorElements.forEach(element => {
            if (element.textContent !== '') {
                isValid = false;
            }
        });
        return isValid;
    }
});



