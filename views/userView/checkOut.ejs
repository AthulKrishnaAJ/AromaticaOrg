    function editAddressValidation(formDataObject){
        // get body value
            let isValid = true
            
                let name = formDataObject.name
                let addressLine = formDataObject.addressLine
                let city = formDataObject.city
                let state = formDataObject.state
                let pincode = formDataObject.pincode
                let phone = formDataObject.phone
                let altPhone = formDataObject.altPhone

                
                let nameRegex = /^[a-zA-Z]+(?: [a-zA-Z]+)*$/;
                let pinRegex = /^[1-9][0-9]{5}$/;
                let phoneRegex = /^[0-9]{10}$/;


                // validation for name
                if(name === "" || name === null){
                    $('#editNameError').text('Field is required');
                    isValid = false
                }
                else if(!nameRegex.test(name)){
                    $('#editNameError').text('Please enter a valid name');
                    isValid = false
                }
                else{
                    $('#editNameError').hide();
                }


                // validation for address line
                if(addressLine === "" || addressLine === null){
                    $('#editAddressLineError').text('Field is required');
                    isValid = false
                }
                else if(addressLine.length < 10){
                    $('#editAddressLineError').text('Atleast enter 10 characters');
                    isValid = false
                }
                else{
                    $('#editAddressLineError').hide();
                }


                // validation for city
                if(city === "" || city === null){
                    $('#editCityError').text('Field is required');
                    isValid = false
                }
                else if(!nameRegex.test(city)){
                    $('#editCityError').text("Please enter a valid city name");
                    isValid = false
                }
                else{
                    $('#editCityError').hide();
                }


                // validtion for state
                if(state === "" || state === null){
                    $('#editStateError').text('Field is required');
                    isValid = false
                }
                else if(!nameRegex.test(state)){
                    $('#editStateError').text('Please enter a valid state name');
                    isValid = false
                }
                else{
                    $('#editStateError').hide();
                }


                // validation for pincode
                if(pincode === "" || pincode === null){
                    $('#editPinError').text('Field is required');
                    isValid = false
                }
                else if(!pinRegex.test(pincode)){
                    $('#editPinError').text('Please enter a valid pincode');
                    isValid = false
                }
                else{
                    $('#editPinError').hide()
                    
                }
                


                // validation for phone
                if(phone === "" || phone === null){
                    $('#editPhoneError').text('Field is required');
                    isValid = false
                }
                else if(!phoneRegex.test(phone)){
                    $('#editPhoneError').text('Please enter a valid phone number');
                    isValid = false
                }
                else if(phone.length < 10 || phone.length > 10){
                    $('#editPhoneError').text('Should contain 10 digits');
                    isValid = false
                }
                else{
                    $('#editPhoneError').hide();
                }


                // validation for alternate phone
                if(altPhone === "" || altPhone === null){
                    $('#editAltPhoneError').text('Field is required');
                    isValid = false
                }
                else if(altPhone !== "" && !phoneRegex.test(altPhone)){
