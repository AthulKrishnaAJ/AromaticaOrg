    <script>

        function resendOtp(event) {
            fetch("/resendOtp", {
                method: "POST"
            }).then((response) => response.json())
                .then((data) => {
                    if (data.success) {
                        // If OTP resend successful, show timer and start countdown
                        toggleVisible(true);
                        startCountdown(30);
                    } else {
                        console.error("Resend OTP failed:", data.message);
                    }
                }).catch((error) => {
                    console.error("Error in resending OTP:", error.message);
                });
        }

        // Call resendOtp when the page is loaded
        window.onload = function () {
            startCountdown(30);
        }

        // Define startCountdown function
        function startCountdown(seconds) {

            let countDown = document.getElementById("countdown");
            countDown.innerHTML = seconds
            let countDownInterval = setInterval(() => {
                seconds--;
                countDown.innerHTML = seconds;
                if (seconds <= 0) {
                    clearInterval(countDownInterval);
                    toggleVisible(false);

                }
            }, 1000);
        }

        // Define toggleVisible function
        function toggleVisible(showTimer) {
            let countDown = document.getElementById("countdown");
            let resendLink = document.getElementById("resendLink");
            let timer = document.getElementById("timer");
            if (showTimer) {
                countDown.style.display = "inline";
                timer.style.display = "inline"
                resendLink.style.display = "none";
            } else {
                countDown.style.display = "none";
                timer.style.display = "none"
                resendLink.style.display = "inline";
            }
        }



        // Hide error message after 3 seconds
        setTimeout(() => {
            let errorMessage = document.getElementById("errorMessage");
            if (errorMessage) {
                errorMessage.style.display = "none";
            }
        }, 3000);



        //----------------------------------------------------------------------------------


        function handleOtp(event) {
            event.preventDefault();
            const otp = document.getElementById("otp").value
            $.ajax({
                url: "/verifyOtp",
                method: "POST",
                data: {
                    otp
                },
                success: (response) => {

                    if (response.status === true) {

                        Toastify({
                            text: "OTP verified successfully",
                            duration: 3000,
                            close: true,
                            backgroundcolor: "green",
                            position: "center"
                        }).showToast()

                        setTimeout(() => {
                            window.location.href = "/login"
                        }, 3000);

                    } else {

                        const errorMessage = document.getElementById('errorMessage');
                        if (response.message) {
                            errorMessage.innerHTML = response.message
                        }
                        else {
                            errorMessage.innerHTML = ""
                        }
                        errorMessage.style.display = "block"
                        setTimeout(() => {
                            errorMessage.style.display = "none"
                        }, 3000);

                    }

                },
                error: (response) => {
                    alert('error')
                }
            })
        }





    </script>

