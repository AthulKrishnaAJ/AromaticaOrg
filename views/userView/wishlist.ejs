    <script>



        function removeProduct(productId, event) {
            event.preventDefault();

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, remove it!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        url: '/removeWishlist',
                        method: 'post',
                        data: { productId: productId },
                        success: (response) => {
                            if (response.status === true) {
                                location.reload();
                            }
                            else {
                                Swal.fire({
                                    title: "Error!",
                                    text: response.message,
                                    icon: 'error',
                                    timer: 3000
                                });
                            }
                        },
                        error: (error) => {
                            console.log("ajaxxx error", error.message);
                            Swal.fire({
                                title: 'Error!',
                                text: "Somthing went wrong, please try again",
                                icon: 'error',
                                timer: 3000
                            })
                        }
                    })
                }
            })
        }







        $(document).ready(function () {
            $('.addToCart').on('click', function (event) {
                event.preventDefault()
                let productId = $(this).find('a').data('product-id');

                let quantity = 1

                $.ajax({
                    url: `/addToCartFromWhishlist?id=${productId}&quantity=${quantity}`,
                    method: "post",
                    success: (res) => {
                        if (res.status === true) {

                            let productId = res.productId

                            Swal.fire({
                                title: "Added to Cart !",
                                text: "Continue Shopping",
                                icon: "success",
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => {
                                removeProductAfterAddToCart(productId, event);
                            })



                        }
                        else {
                            if (res.status === false && res.message === "Out of stock") {

                                Swal.fire({
                                    title: "Warning!",
                                    text: "Quantity limit reached!",
                                    icon: "warning",
                                    showConfirmButton: true
                                });
                            }
                            else if (res.status === "Product Unavailable") {

                                Swal.fire({
                                    title: "Product Unavailable",
                                    text: "Selected product is unavailble",
                                    icon: "error",
                                    showConfirmButton: true
                                });
                            }

                            else {

                                Swal.fire({
                                    title: "Please Login",
                                    text: "Failed to add to cart",
                                    icon: "error",
                                    showConfirmButton: true
                                }).then(() => {
                                    window.location.href = "/login"
                                })
                            }



                        }

                    },

                    error: (error) => {
                        console.log("Ajax error", error.message);

                        Swal.fire({
                            title: "Something wrong!",
                            text: "Failed to add to cart",
                            icon: "error",
                            showConfirmButton: true
                        });

                    }
                });


            });
        });


        function removeProductAfterAddToCart(productId, event) {
            event.preventDefault();

            $.ajax({
                url: '/removeWishlist',
                method: 'post',
                data: { productId: productId },
                success: (response) => {
                    if (response.status) {

                        location.reload();
                    }
                    else {
                        Swal.fire({
                            title: "Error!",
                            text: response.message,
                            icon: 'error',
                            timer: 3000
                        });
                    }
                },
                error: (error) => {
                    console.log("Error in ajax :", error);

                }
            })
        }

    </script>


